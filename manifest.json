{
  "manifest_version": 3,
  "name": "SafeSurf by Team Cyber Titans",
  "version": "0.3",
  "description": "Phishing detection by Team Cyber Titans (Dev: Ankan).",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://www.virustotal.com/api/v3/domains/*",
    "https://www.whoisxmlapi.com/whoisserver/WhoisService*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/161616.jpg",
    "48": "icons/484848.jpg",
    "128": "icons/128128128.jpg"
  }
}

